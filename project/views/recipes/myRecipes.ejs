<%- include('../partials/header') %>
<%- include('../partials/navbar', { user: user }) %>

<div class="container">
  <div class="page-header">
    <h1>ğŸ“– My Recipes</h1>
    <p>All your culinary creations in one place</p>
  </div>

  <div class="recipes-grid">
    <% if (recipes.length === 0) { %>
      <div class="no-recipes">
        <p>You haven't created any recipes yet!</p>
        <a href="/recipes/new" class="btn btn-primary">Create Your First Recipe</a>
      </div>
    <% } else { %>
      <% recipes.forEach(recipe => { %>
        <div class="recipe-card">
          <div class="recipe-header">
            <h3><%= recipe.title %></h3>
            <span class="recipe-category"><%= recipe.category %></span>
          </div>
          <p class="recipe-description"><%= recipe.description %></p>
          <div class="recipe-meta">
            <span class="meta-item">â±ï¸ <%= recipe.cookingTime %> mins</span>
            <span class="meta-item">ğŸ“Š <%= recipe.difficulty %></span>
          </div>
          <div class="recipe-actions">
            <a href="/recipes/<%= recipe._id %>" class="btn btn-secondary">View</a>
            <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-edit">Edit</a>
            <form action="/recipes/<%= recipe._id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this recipe?');">
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
